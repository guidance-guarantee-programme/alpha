<% content_for :proposition do %>
  <%= erb :"partials/proposition" %>
<% end %>

<% content_for :page_title do %>
  Check your booking
<% end %>

<article role="article" class="group">

  <div class="inner-block">
    <p class="lede text">Check all the details on this page carefully before clicking 'complete booking'</p>
    <div class="divider">
      <div class="grid-wrapper">
        <div class="grid grid-2-3">
          <div class="inner-block">
            <h2>Your details</h2>
            <p>
              <span class="info-label">First name:</span>
              <%= @name %>
            </p>

            <p>
              <span class="info-label">Last name:</span>
              <%= @surname %>
            </p>

            <p>
              <span class="info-label">Email:</span>
              <%= @email %>
            </p>

            <p>
              <span class="info-label">Phone:</span>
              <%= @phone %>
            </p>
          </div>
        </div>
        <div class="grid grid-1-3">
          <div class="inner-block">
            <p class="edit-link"><a href="/contact-details">Change your details</a></p>
          </div>
        </div>
      </div>
    </div>

    <div class="divider divider--last">
      <div class="grid-wrapper">
        <div class="grid grid-2-3">
          <div class="inner-block">
            <h2>Date and time of your session</h2>

            <p>One of our pension experts will phone you on:</p>

            <h3><%= @sessions.first.strftime('%A, %e %B at %l%P') %></h3>

            <p>The number will come up as <%= @number %>.</p>
          </div>
        </div>
        <div class="grid grid-1-3">
          <div class="inner-block">
            <p class="edit-link"><a href="/book-a-session">Choose a different session</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="inner-block">
    <form action="/send-request" method="post" class="form">
      <input type="submit" class="button" value="Complete booking">
    </form>
  </div>
</article>
