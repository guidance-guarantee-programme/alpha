<% content_for :page_title do %>
  Find a local branch
<% end %>

<form action="/" method="post" class="form">
  <div class="inner-block">

    <p class="text">
      There are 26 locations in the UK where you can have a face to face session.
      Enter your postcode to find the nearest location.
    </p>

    <div class="form-group">
      <label class="form-label-bold" for="full-name">Post code</label>
      <input type="text" class="form-control" id="full-name">
    </div>

    <div class="form-group">
      <input type="submit" class="button" value="Search">
    </div>

  </div>


</form>
